    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Clique sur le bouton :) !"
        android:id="@+id/methode3View"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/EraseButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aller ca va marcher avec cette mÃ©thode !"
        android:id="@+id/methode3Button"
        android:layout_below="@+id/methode3View"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:nestedScrollingEnabled="false" />

</RelativeLayout>
